var-user-file.yml
---
- name: user with var file 
  hosts: all 
  become: true 
  vars_files:
    - user.yml
  tasks:
  - name: create user 
    user:
      name: "{{ user }}"   .
      
      user.yml
      user: devopsengineer
      
     sudo vi var-user-file.yml
      sudo vi user.yml
    ansible-playbook var-user.yml
